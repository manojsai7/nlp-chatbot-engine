# Example environment configuration
# Copy this to .env and update with your values

# App Settings
APP_NAME="NLP Chatbot Engine"
APP_VERSION="1.0.0"
DEBUG=false

# API Settings
API_PREFIX="/api/v1"

# CORS Settings (comma-separated list, or * for all origins)
# IMPORTANT: In production, specify exact origins instead of *
CORS_ORIGINS="*"
# Production example: CORS_ORIGINS="https://example.com,https://app.example.com"

# NLP Settings
INTENT_MODEL="distilbert-base-uncased"
ENTITY_MODEL="en_core_web_sm"
MAX_SEQUENCE_LENGTH=512

# Vector DB Settings
VECTOR_DB_TYPE="faiss"  # Options: faiss, chroma, pgvector
EMBEDDING_MODEL="sentence-transformers/all-MiniLM-L6-v2"
VECTOR_DIMENSION=384

# Memory Settings
SHORT_TERM_MEMORY_TTL=3600
LONG_TERM_MEMORY_ENABLED=true
CONVERSATION_SUMMARY_THRESHOLD=10

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Redis Settings (for memory and rate limiting)
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""

# Database Settings
DATABASE_URL="sqlite:///./chatbot.db"

# Security
SAFETY_FILTER_ENABLED=true
# IMPORTANT: Set a strong secret key in production (used for tokens, sessions, etc.)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=""  # Leave empty to auto-generate (not recommended for production clusters)

# Channel Adapters (optional - configure as needed)

# Slack
SLACK_BOT_TOKEN=""
SLACK_SIGNING_SECRET=""

# Microsoft Teams
TEAMS_APP_ID=""
TEAMS_APP_PASSWORD=""

# WhatsApp (via Twilio)
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_WHATSAPP_NUMBER=""
